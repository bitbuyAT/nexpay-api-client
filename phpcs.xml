<?xml version="1.0"?>
<ruleset name="nexpay-api-client">
  <description>The nexpay-api-client coding standard.</description>

   <!-- Include whole PSR-2 standard which includes PSR-1-->
  <rule ref="PSR2">
      <exclude name="PSR2.ControlStructures.ElseIfDeclaration.NotAllowed" />
  </rule>

     <!-- Ignore camelCase writing for test methods -->
  <rule ref="PSR1.Methods.CamelCapsMethodName">
    <exclude-pattern>/tests/*</exclude-pattern>
  </rule>

</ruleset>